// Start Landing Page
.landing-page
  #demo.carousel.slide(data-bs-ride='carousel')
        // Indicators/dots
        .carousel-indicators
            button.active(type='button' data-bs-target='#demo' data-bs-slide-to='0')
            button(type='button' data-bs-target='#demo' data-bs-slide-to='1')
            button(type='button' data-bs-target='#demo' data-bs-slide-to='2')
        // The slideshow/carousel
        .carousel-inner
            .carousel-item.active
                .overlay
                img.d-block.w-100(src='images/background-1.jpg' alt='Los Angeles')
            .carousel-item
                .overlay
                img.d-block.w-100(src='images/background-2.jpg' alt='Chicago')
            .carousel-item
                .overlay
                img.d-block.w-100(src='images/background-3.jpg' alt='New York')
        // Left and right controls/icons
        button.carousel-control-prev(type='button' data-bs-target='#demo' data-bs-slide='prev')
            span.carousel-control-prev-icon
        button.carousel-control-next(type='button' data-bs-target='#demo' data-bs-slide='next')
            span.carousel-control-next-icon
  .container.header-container
    .header-area
      .logo.navbar-brand مَكتب النبلاء
      .links-container
        ul.links
          li
            span.active(data-section='.about')  عنَّا
          li
            span(data-section='.services') خدماتنا
          li
            span(data-section='.features') مميزاتنا
          li
            span(data-section='.testimonials') التوصيات
          li
            span(data-section='.contact') التواصل
        button.toggle-menu
          span
          span
          span
  .intro-text
    h1
        |مكتب
        br
        span  النبلاء
        br
        |  القانوني
